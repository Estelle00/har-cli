{
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist",
    "lib": [
      "ES2020"
    ]
  },
  "include": [
    "index.ts"
  ]
}
