{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "module": "CommonJS",
    "target": "ES2018",
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "template"
  ]
}
