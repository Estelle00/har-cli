{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "changelog": {
    "repo": "https://git.huianrong.com/frontend/har-cli",
    "nextVersion": "Unreleased",
    "labels": {
      "feat": "新的功能",
      "PR: Breaking Change": ":boom: Breaking Changes",
      "fix": "Bug 修复",
      "docs": "文档修改"
    },
    "cacheDir": ".changelog"
  },
  "command": {
    "publish": {
      "registry": "https://nexus.huianrong.com/repository/npm-hosted/"
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  },
  "version": "independent"
}
